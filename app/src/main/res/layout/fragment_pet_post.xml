<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".PetPostFragment">


    <ImageView
        android:id="@+id/iv_photo_pet_post"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tv_name_pet_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Name Pet" />

    <TextView
        android:id="@+id/tv_age_pet_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Age Pet" />
    <TextView
        android:id="@+id/tv_gender_pet_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_lost_date_pet_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="19/05/2020 15:00" />

    <TextView
        android:id="@+id/tv_description_pet_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description lost"/>
    <TextView
        android:id="@+id/tv_from_pet_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>